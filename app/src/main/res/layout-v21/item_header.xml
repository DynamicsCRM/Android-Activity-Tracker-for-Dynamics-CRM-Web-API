<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/infoTop"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
        app:layout_collapseMode="parallax">

        <include
            android:id="@id/title_section"
            layout="@layout/item_title" />

        <android.widget.Space
            android:layout_width="fill_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:id="@+id/address_wrapper"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:visibility="gone">

            <ImageView
                android:scaleType="fitCenter"
                android:src="@drawable/ic_map"
                android:contentDescription="@string/map_icon_description"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <View
                android:layout_width="1dp"
                android:background="#35b6e1"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/address"
                android:text="@string/default_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="3"
                android:textSize="13sp"
                android:textColor="#999999" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_wrapper"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:visibility="gone">

            <ImageView
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_phone"
                android:contentDescription="@string/record_phone_description"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <View
                android:layout_width="1dp"
                android:background="#35b6e1"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/phone"
                android:text="@string/default_data"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="13sp"
                android:textColor="#999999"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mail_wrapper"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:visibility="gone">

            <ImageView
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_mail"
                android:contentDescription="@string/email_record_description"
                android:layout_marginEnd="8dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <View
                android:layout_width="1dp"
                android:background="#35b6e1"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/email"
                android:text="@string/default_data"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#999999"/>

        </LinearLayout>

    </LinearLayout>

</layout>