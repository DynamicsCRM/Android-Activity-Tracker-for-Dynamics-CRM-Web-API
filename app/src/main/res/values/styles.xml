<resources>

    <style name="ActivityTracker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorHint">@color/hint_disabled_dark</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <style name="ActivityTracker.Activities">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.Light.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="overlapAnchor">true</item>
        <item name="android:gravity">left</item>
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="Widget.ActivityTracker.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="android:theme">@style/ActivityTrackerDarkOverlay</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="Widget.ActivityTracker.Toolbar.SmallCapsTitle">
        <item name="titleTextAppearance">@style/TextAppearance.ToolbarTitleSmallCaps</item>
    </style>

    <style name="Widget.ActivityTracker.Toolbar.ItemToolbar" parent="Widget.ActivityTracker.Toolbar.SmallCapsTitle">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="Widget.ActivityTracker.Toolbar.Accent">
        <item name="android:background">?android:colorAccent</item>
        <item name="titleTextAppearance">@style/TextAppearance.AccentToolbar</item>
    </style>

    <style name="ActivityTracker.TextView" parent="@android:style/Widget.Holo.TextView">

    </style>

    <style name="ActivityTracker.TextView.PrimaryName">

    </style>

    <style name="ActivityTracker.TextView.Subtitle">

    </style>

</resources>